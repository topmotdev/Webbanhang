@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<WebApplication1.Models.EF.Product>
@{
    ViewData["Title"] = "Tin tuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lí danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh mục sản phẩm</h3>

            <div class="card-tools">

                <a href="/admin/product/add" class="btn btn-primary">thêm mới</a>
                <a href="#" class="btn btn-danger btnDeleteAll">xóa ô được chọn</a>
            </div>

        </div>
        <div class="card-body">
            <div class="card-tools">
                @using (Html.BeginForm("index", "Product", FormMethod.Get, new { }))
                {
                    <div class="search-container">


                        @Html.TextArea("SearchText", new { @class = "form-control", @id = "searchInput", @placeholder = "Nhập từ khóa tìm kiếm..." })
                        <button type="submit" id="searchButton">Tìm kiếm</button>
                        <style>
                            .search-container {
                                display: flex;
                                align-items: center;
                            }

                            #searchInput {
                                padding: 8px;
                                border: 1px solid #ccc;
                                border-radius: 4px;
                                margin-right: 5px;
                                width: 270px;
                                height: 40px;
                            }

                                #searchInput:focus {
                                    border-color: #007bff;
                                    outline: none; /* Loại bỏ viền màu xanh khi focus */
                                }

                            #searchButton {
                                padding: 8px 16px;
                                background-color: #007bff;
                                color: white;
                                border: none;
                                border-radius: 4px;
                                cursor: pointer;
                            }
                        </style>
                    </div>
                }
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAllToDel" /></th>
                        <th>STT</th>
                        <th>Tên danh mục</th>
                        <th>Ngày tạo</th>
                        <th>ảnh đại diện</th>
                        <th>Chi tiết</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <style>
                        .table img {
                            max-width: 100px;
                            height: 100px;
                        }
                    </style>
                    @if (Model != null && Model.Any())

                    {
                        var stt = -1;
                        var i = ViewBag.PageSize;
                        @foreach (var item in Model)
                        {

                            ;
                            <tr id="item_@item.Id">
                                <td><input type="checkbox" class="select" value="@item.Id" /></td>
                                <td>@(stt + i)</td>
                                <td>@item.Title</td>
                                <td>@Html.Raw(item.CreatedDate?.ToString("dd/MM/yyyy"))</td>
                                <td>@Html.Raw(item.Image)</td>
                                <td>
                                    <div class="detail-container">
                                        @Html.Raw(item.Detail)
                                    </div>
                                </td>
                                <td>
                                    <a href="/admin/posts/edit/@item.Id" class="btn btn-primary">sửa</a>
                                    <a href="#" class="btn btn-danger btnDelete" data-id="@item.Id">xóa</a>

                                </td>
                            </tr>

                            stt++;
                        }

                    }


                    else
                    {
                        <tr>
                            <td colspan="3">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            <style>
                .pagination {
                    display: inline-block;
                    margin-bottom: 0;
                    margin-top: 20px;
                    padding-left: 0;
                    border-radius: 4px;
                    display: flex;
                    justify-content: flex-end;
                }

                    .pagination > li {
                        display: inline;
                    }

                        .pagination > li > a,
                        .pagination > li > span {
                            position: relative;
                            float: left;
                            padding: 6px 12px;
                            margin-left: -1px;
                            line-height: 1.42857143;
                            color: #337ab7;
                            text-decoration: none;
                            background-color: #fff;
                            border: 1px solid #ddd;
                        }

                        .pagination > li:first-child > a,
                        .pagination > li:first-child > span {
                            margin-left: 0;
                            border-bottom-left-radius: 4px;
                            border-top-left-radius: 4px;
                        }

                        .pagination > li:last-child > a,
                        .pagination > li:last-child > span {
                            border-top-right-radius: 4px;
                            border-bottom-right-radius: 4px;
                        }

                        .pagination > li > a:hover,
                        .pagination > li > span:hover,
                        .pagination > li > a:focus,
                        .pagination > li > span:focus {
                            color: #23527c;
                            background-color: #eee;
                            border-color: #ddd;
                        }

                    .pagination > .active > a,
                    .pagination > .active > span,
                    .pagination > .active > a:hover,
                    .pagination > .active > span:hover,
                    .pagination > .active > a:focus,
                    .pagination > .active > span:focus {
                        z-index: 2;
                        color: #fff;
                        cursor: default;
                        background-color: #337ab7;
                        border-color: #337ab7;
                    }

                    .pagination > .disabled > span,
                    .pagination > .disabled > span:hover,
                    .pagination > .disabled > span:focus,
                    .pagination > .disabled > a,
                    .pagination > .disabled > a:hover,
                    .pagination > .disabled > a:focus {
                        color: #777;
                        cursor: not-allowed;
                        background-color: #fff;
                        border-color: #ddd;
                    }

                .pagination-lg > li > a,
                .pagination-lg > li > span {
                    padding: 10px 16px;
                    font-size: 18px;
                    line-height: 1.3333333;
                }

                .pagination-sm > li > a,
                .pagination-sm > li > span {
                    padding: 5px 10px;
                    font-size: 12px;
                    line-height: 1.5;
                }
            </style>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
    <style>
        .detail-container {
            max-height: 200px; /* Giới hạn chiều cao của phần chi tiết */
            overflow-y: auto; /* Tạo hiệu ứng lướt khi nội dung vượt quá kích thước */
        }
    </style>
</section>
@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', ".btnDeleteAll", function () {
                var ids = [];
                $('.select:checked').each(function () {
                    ids.push($(this).val());
                });

                var conf = confirm("Bạn có muốn xóa các bản ghi đã chọn không?");

                if (conf === true) {
                    $.ajax({
                        url: 'https://localhost:7141/admin/posts/delete_selected',
                        type: 'POST',
                        data: { ids: ids },
                        success: function () {
                            ids.forEach(function (id) {
                                $('#item_' + id).remove();
                            });
                            if (ids != null && ids.length > 0) {
                                alert("Xóa thành công các bản ghi.");
                            }
                            else {
                                alert("Không có  bản ghi nào để xóa.");
                            }
                        },
                        error: function (xhr, status, error) {

                        }
                    });
                }
            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("bạn có muốn xóa bản ghi này không ?");
                if (conf === true) {
                    $.ajax({
                        url: 'https://localhost:7141/admin/posts/delete',
                        type: 'POST',
                        data: { Id: id },
                        success: function () {
                            alert("xóa thành công bản ghi: " + id);
                            $('#item_' + id).remove();
                        },
                        error: function (xhr, status, error) {

                            alert("xóa thất bại bản ghi: " + id);
                        }
                    })
                }
            });
            $('body').on('change', "#selectAllToDel", function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr("selected", "checked");
                    }
                    else {
                        checkbox.attr("selected", "");
                    }
                })
            })

        })



    </script>
}
